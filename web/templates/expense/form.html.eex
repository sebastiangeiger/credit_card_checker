<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :merchant_id, class: "control-label" %>
    <%= select f, :merchant_id, @merchants, class: "form-control" %>
    <%= error_tag f, :merchant_id %>
  </div>


  <div class="form-group">
    <%= label f, :time_of_sale, class: "control-label" %>
    <%= datetime_select f, :time_of_sale, class: "form-control" %>
    <%= error_tag f, :time_of_sale %>
  </div>

  <div class="form-group">
    <%= label f, :amount, class: "control-label" %>
    <%= number_input f, :amount, class: "form-control", step: "0.01", placeholder: "0.00" %>
    <%= error_tag f, :amount %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
